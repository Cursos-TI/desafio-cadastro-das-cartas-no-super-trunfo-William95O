#include <stdio.h>
int main()
{
    int torre = 1;
    printf("Movimento Torre:\n");
    while (torre <= 5)
    {
        printf("Direita\n");
        torre ++;
    }

    int bispo =1;
    printf("Movimento do Bispo:\n");
    do
    {
        printf("Cima e Direita\n");
        ++ bispo;
    }
    while (bispo <= 5);

    int rainha=1;
    printf("Movimento Rainha:\n");
    for(rainha ; rainha<= 8; rainha ++)
    {
        printf("Esquerda\n");
    }

    int cavalo =1;
    printf("Movimento do Cavalo:\n");
    while( cavalo <=1 )
    {
        for(int i=0; i<=1; i++)
        {
            printf("Baixo\n");
        }

        cavalo ++;
        printf("Esquerda\n");
    }





    return 0;
}
